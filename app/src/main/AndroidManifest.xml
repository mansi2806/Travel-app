<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.travel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BaseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MonumentsActivity"
            android:label="Monuments"
            android:parentActivityName=".BaseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BaseActivity"/>
        </activity>
        <activity android:name=".MallsActivity"
            android:label="Malls"
            android:parentActivityName=".BaseActivity"
            >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".BaseActivity"/>
        </activity>
        <activity android:name=".RestaurantsActivity"
            android:label="Restaurants"
            android:parentActivityName=".BaseActivity"
            >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".BaseActivity"/>
        </activity>
    </application>

</manifest>